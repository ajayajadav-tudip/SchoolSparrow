%body.focusedform
  .verticalcenter
    %a{:href => "http://localhost:3000"}
      %img.brand{:alt => "Logo", :src => "/assets/logo-big.jpg"}/
    .panel.panel-primary
      .panel-body
        %h4.text-center{:style => "margin-bottom: 25px;"} Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
          .field.form-group
            .col-sm-2
              .input-group
                %span.input-group-addon
                  %i.glyphicon.glyphicon-envelope
            .col-sm-10
              = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email"
          .field.form-group
            .col-sm-2
              .input-group
                %span.input-group-addon
                  %i.glyphicon.glyphicon-user
            .col-sm-10
              = f.text_field :first_name, autofocus: true, :class => "form-control", :placeholder => "FirstName"
          .field.form-group
            .col-sm-2
              .input-group
                %span.input-group-addon
                  %i.glyphicon.glyphicon-user
            .col-sm-10
              = f.text_field :last_name, autofocus: true, :class => "form-control", :placeholder => "LastName"
          .field.form-group
            .col-sm-2
              .input-group
                %span.input-group-addon
                  %i.glyphicon.glyphicon-lock
            .col-sm-10
              = f.password_field :password, autofocus: true, :class => "form-control", :placeholder => "Password"
          .field.form-group
            .col-sm-2
              .input-group
                %span.input-group-addon
                  %i.glyphicon.glyphicon-lock
            .col-sm-10
              = f.password_field :retypepassword, autofocus: true, :class => "form-control", :placeholder => "Retype-Password"
          .actions
            = f.submit "Sign up", :class => "btn btn-primary btn-block"
      .panel-footer
        = render "users/shared/links"

  / <script type="text/javascript" src="assets/js/less.js"></script>
